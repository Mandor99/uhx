section.who
    .container
        +sectionTitle(`${locales.cards['title']}`)
        .row.row-cols-1.row-cols-lg-3.g-4.cards-p
            -const card1 = {img:'grid1', title:`${locales.cards['card1']['title']}`, body: `${locales.cards['card1']['body']}`,extra: `${locales.cards['card1']['extra']}`, dataAos:'flip-left'}
            -const card2 = {img:'grid2', title: `${locales.cards['card2']['title']}`, body: `${locales.cards['card2']['body']}`, extra:`${locales.cards['card2']['extra']}`, dataAos:'flip-up'}
            -const card3 = {img:'grid3', title: `${locales.cards['card3']['title']}`, body: `${locales.cards['card3']['body']}`, extra: `${locales.cards['card3']['extra']}`, dataAos: 'flip-right'}
            -const cards = [card1, card2, card3]
            each card in cards
                .col
                    .card.h-100.shadow.border-0(data-aos=`${card.dataAos}`)
                        img.card-img-top(src=`../imgs/background/${card.img}.png`, alt='card image', height='269px')
                        .card-body.text-center.card-content
                            h5.card-title.color-primary.fw-bold.custom-title3 #{card.title}
                            p.card-text.lh-lg.custom-txt3 #{card.body}
                                span.d-inline-block.color-primary #{card.extra}
