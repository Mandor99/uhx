nav.navbar.fixed-top.navbar-expand-lg.bg-primary
  .container
    a.navbar-brand.brand(href='/')
        img.logo-dimension(src="./imgs/logos/UHX white.svg", alt="uhx logo")
    button.navbar-toggler.collapsed.position-relative.d-flex.d-lg-none.flex-column.justify-content-around.icon-button(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.toggler-icon.top-bar
      span.toggler-icon.mid-bar
      span.toggler-icon.bottom-bar
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.navbar-nav-scroll.me-auto.mb-2.mb-lg-0.gap-3
        -const navItem1 = {name: 'الرئيسية', href: '/'}
        -const navItem2 = {name: "من نحن", href: 'about.html'}
        -const navItem3 = {name: 'خدماتنا', href: '#'}
        -const navItem4 = {name: 'الخبرات', href: '#'}
        -const navItem5 = {name: "الية العمل", href: '#'}
        -const navItems = [navItem1, navItem2, navItem3, navItem4, navItem5 ]
        each item in navItems
          li.nav-item
            a.nav-link.text-white.fs-6.fw-normal.underline-link.px-0.text-uppercase.text-center.pb-3(aria-current='page', href=`${item.href}`, data-toggle='collapse') #{item.name}
        li.nav-item.d-flex.align-items-center.gap-3.mx-auto
            a.nav-link.social-icon.nav-link.px-0.text-center.pb-3(aria-current='page', data-toggle='collapse' href="#")
              img(src="./imgs/icons/twitter.png", alt="twitter" width='20' height='20')
            a.nav-link.social-icon.nav-link.px-0.text-center.pb-3(aria-current='page', data-toggle='collapse' href="#")
              img(src="./imgs/icons/instagram.png", alt="instagram" width='20' height='20')
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle.text-white.fs-6.fw-normal.text-uppercase.text-center(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
            | نحن معك دائما
          ul.dropdown-menu.bg-primary-dark.py-0
            -const dropdownItems = ["طلب استشارة", "انضم كخبير","التراخيص"]
            each item in dropdownItems
              li.text-center
                a.dropdown-item.text-white.fs-6.fw-normal.text-uppercase.text-center.circle-effect(href='#') #{item}
        li.nav-item.mx-auto.pb-3: button.download-btn.btn.rounded-button.btn-primary.d-flex.align-items-center.fs-6.gap-2.color-primary.bg-white.border-0
          img(src="./imgs/icons/download (1).png", alt="download profile")
          | الملف الشخصي

